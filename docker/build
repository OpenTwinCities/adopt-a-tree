#!/bin/bash
set -e

# This script builds the Docker container, seeds the app with sample data, starts the server, runs the tests, and logs the screen output.

DATE=`date +%Y%m%d-%H%M%S-%3N`
mkdir log/$DATE
docker/build-log 2>&1 | tee log/$DATE/build.log
wait
